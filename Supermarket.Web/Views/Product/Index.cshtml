@model Supermarket.Web.Models.ProductListViewModel

@{ 
    Layout = "~/Views/_Layout.cshtml";
}

    <div>
        <table class="table table-responsive">
            <tr>
                <td>Product Name</td>
                <td> Price</td>
                <td>Stock</td>
                <td></td>
            </tr>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td> @product.Price</td>
                    <td>@product.Stock</td>
                    <td><a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">Add to Cart</a></td>
                </tr>
            }
        </table>
    </div>
<product-list-pager
current-category="@Model.CurrentCategory" 
current-page="@Model.CurrentPage" 
page-count="@Model.PageCount" 
page-size="@Model.PageSize"></product-list-pager>
